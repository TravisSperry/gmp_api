.container.pt-5
  .row
    .col-md-6.offset-md-3
      .card
        .card-body
          %h3.card-title.text-center Global Math Project Login
          = simple_form_for :user, url: session_path(:user) do |f|
            = render '/shared/form_errors', object: f.object
            = f.input :email
            = f.input :password
            = f.input :remember_me, as: :boolean
            = f.submit 'Sign in', class: 'btn btn-secondary'
          %p.mt-3.mb-0
            = link_to "Forgot your password?", new_password_path(:user), class: 'mt-2'
