.container
  %h1 Listing website_options

  %table.table.datatable
    %thead
      %tr
        %th Type
        %th Key
        %th Value
        %th Active
        %th
        %th

    %tbody
      - @website_options.each do |website_option|
        %tr{ style: ('border-left: #28a745 5px solid;' if website_option.active?) }
          %td= website_option.website_option_type.try :name
          %td= website_option.key
          %td= website_option.value
          %td
            - if website_option.active?
              %span.text-success
                = icon('fas', 'check-circle')
                Active
            - else
              Not Active
          %td= link_to 'Show', website_option
          %td= link_to 'Edit', edit_website_option_path(website_option)

  %br

  = link_to 'New Website option', new_website_option_path
